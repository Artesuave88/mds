{
  "name": "mds-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n WEB,VERCEL -c cyan,green \"pnpm --filter web dev\" \"vercel dev --listen 3000\"",
    "build": "pnpm --filter web build"
  },
  "devDependencies": {
    "@vercel/node": "^5.3.25",
    "concurrently": "^9.1.2",
    "typescript": "^5.9.2",
    "vercel": "^49.0.1"
  }
}
